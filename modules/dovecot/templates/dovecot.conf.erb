ssl_cert = <<%= @ssl_cert %>
ssl_key = <<%= @ssl_key %>
auth_mechanisms = <%= @auth_mech.join(' ') %>
mail_location =  'maildir:~/mail'

mbox_write_locks = fcntl

protocols = imap lmtp

protocol lmtp {
  postmaster_address = postmaster@aqwari.net
  mail_plugins = $mail_plugins sieve
}

plugin {
  sieve_after = /var/lib/dovecot/sieve
}

service auth {
  unix_listener /var/spool/postfix/private/auth {
    group = postfix
    mode = 0660
    user = postfix
  }
  user = root
}

service lmtp {
  unix_listener /var/spool/postfix/private/dovecot-lmtp {
    group = postfix
    mode = 0660
    user = postfix
  }
}
  
userdb {
  driver = passwd-file
  args = username_format=%n@aqwari.net /etc/passwd
}

passdb {
  driver = pam
}
